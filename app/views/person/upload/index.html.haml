#main.row-fluid
  - if can?(:edit, @person)
    - if (@person.upload_registration_pdf.present? && @person.upload_passport_pdf.present? && @person.upload_sepa_pdf.present?)
      = t('activerecord.attributes.person.upload_info_ready')
    - else 
      = t('activerecord.attributes.person.upload_info')
    %br 
    = standard_form(@person, {url: upload_group_person_path,  method: :put}) do |f|
      = f.error_messages
      %br
      = f.labeled(:upload_passport_pdf, t('activerecord.attributes.person.upload_passport_pdf')) do
        = f.file_field(:upload_passport_pdf)
        - if @person.upload_passport_pdf.present?
          = action_button(t('activerecord.button.show_passport'),
                          '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/upload/show_passport',
                          :envelope,
                          remote: false,
                          method: :get,
                          rel: :tooltip,
                          title: t('activerecord.button.review_hint'))
      %br
      = f.labeled(:upload_registration_pdf, t('activerecord.attributes.person.upload_registration_pdf')) do
        = f.file_field(:upload_registration_pdf)
        - if @person.upload_registration_pdf.present?
          = action_button(t('activerecord.button.show_registration'),
                          '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/upload/show_registration',
                          :envelope,
                          remote: false,
                          method: :get,
                          rel: :tooltip,
                          title: t('activerecord.button.review_hint'))
      %br
      = f.labeled(:upload_sepa_pdf, t('activerecord.attributes.person.upload_sepa_pdf')) do
        = f.file_field(:upload_sepa_pdf)
        - if @person.upload_sepa_pdf.present?
          = action_button(t('activerecord.button.show_sepa'),
                          '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/upload/show_sepa',
                          :envelope,
                          remote: false,
                          method: :get,
                          rel: :tooltip,
                          title: t('activerecord.button.review_hint'))
      -if(@person.role_wish == "Unit Leitung")
        %br
        = f.labeled(:upload_recommondation_pdf, t('activerecord.attributes.person.upload_recommondation_pdf')) do
          = f.file_field(:upload_recommondation_pdf)
          - if @person.upload_recommondation_pdf.present?
            = action_button(t('activerecord.button.show_recommondation'),
                            '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/upload/show_recommondation',
                            :envelope,
                            remote: false,
                            method: :get,
                            rel: :tooltip,
                            title: t('activerecord.button.review_hint'))
      -if(@person.role_wish != "Teilnehmende*r")
        %br
        = f.labeled(:upload_good_conduct_pdf, t('activerecord.attributes.person.upload_good_conduct_pdf')) do
          = f.file_field(:upload_good_conduct_pdf)
          - if @person.upload_good_conduct_pdf.present?
            = action_button(t('activerecord.button.show_good_conduct'),
                            '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/upload/show_good_conduct',
                            :envelope,
                            remote: false,
                            method: :get,
                            rel: :tooltip,
                            title: t('activerecord.button.review_hint'))
      %br
      = form_buttons(f, submit_label: 'Dokumente hochladen', cancel_url: person_path(@person))


