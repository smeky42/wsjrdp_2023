#main.row-fluid
- if @printable
    - if can?(:edit, @person)
        = action_button(t('activerecord.button.print_preview'),
                        '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/print/preview',
                        :envelope,
                        remote: false,
                        method: :get,
                        rel: :tooltip,
                        title: t('activerecord.button.print_preview_hint'))

    - if can?(:edit, @person)
        = action_button(t('activerecord.button.print_submit'),
                        '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/print/submit',
                        :envelope,
                        remote: false,
                        method: :get,
                        rel: :tooltip,
                        title: t('activerecord.button.print_submit_hint'))
- else
    -if @person.registration_locked
        - if can?(:edit, @person)
            = action_button(t('activerecord.button.print_review'),
                            '/groups/' + params[:group_id] + '/people/'+ params[:id] + '/print/preview',
                            :envelope,
                            remote: false,
                            method: :get,
                            rel: :tooltip,
                            title: t('activerecord.button.print_review_hint'))
        
    